{
  "description": "A task that can be marked as completed.",
  "fields": {
    "id": {
      "primaryKey": true,
      "description":  "The unqiue ID of the task"
    },
    "task": "string",
    "parentId": {
      "foreignKey": "todo.id",
      "null": true
    },
    "completedAt": {
      "type": "dateTime",
      "default": false,
      "null": true
    },
    "priority": {
      "type": "boolean",
      "default": false
    }
  },
  "queries": [
    {
      "name": "allTodos",
      "arguments": [
        {
          "name": "offset",
          "default": 0,
          "description": "The offset to start the query at",
          "type": "integer"
        },
        {
          "name": "limit",
          "default": 50,
          "description": "The number of rows to return",
          "type": "integer"
        }
      ]
    }
  ]
}